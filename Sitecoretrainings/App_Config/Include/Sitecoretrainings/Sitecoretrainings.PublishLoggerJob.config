<?xml version="1.0" encoding="utf-8" ?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <!--
      Publish Logger Scheduled Job Configuration - Sitecore 10.3

      This is a SCHEDULED AGENT that runs periodically to check for and log recently published items.
      It checks for items that were updated in the last 10 minutes and logs their details.

      The interval is set to run every 10 minutes (00:10:00 = HH:MM:SS format)

      INTERVAL FORMAT (HH:MM:SS):
      - 00:05:00 = Every 5 minutes
      - 00:10:00 = Every 10 minutes
      - 00:30:00 = Every 30 minutes
      - 01:00:00 = Every 1 hour
    -->

    <scheduling>
      <!-- Publish Logger Scheduled Agent - Runs every 10 minutes -->
      <agent type="Sitecoretrainings.Jobs.PublishLoggerJob, Sitecoretrainings"
             method="Run"
             interval="00:10:00">
      </agent>
    </scheduling>

  </sitecore>
</configuration>
