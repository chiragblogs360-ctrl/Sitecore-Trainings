<?xml version="1.0" encoding="utf-8" ?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <!--
      HelloWorld Scheduled Job Configuration - Sitecore 10.3

      This is a SCHEDULED AGENT that runs on a timer and logs "Hello World from job"
      The interval is set to run every 5 minutes (00:05:00 = HH:MM:SS format)

      INTERVAL FORMAT (HH:MM:SS):
      - 00:01:00 = Every 1 minute
      - 00:05:00 = Every 5 minutes
      - 00:30:00 = Every 30 minutes
      - 01:00:00 = Every 1 hour
      - 24:00:00 = Every 24 hours (daily)
    -->

    <scheduling>
      <!-- HelloWorld Scheduled Agent - Runs every 5 minutes -->
      <agent type="Sitecoretrainings.Jobs.HelloWorldJob, Sitecoretrainings" method="Run" interval="00:05:00">
      </agent>
    </scheduling>

  </sitecore>
</configuration>
